{
  "metadata": {
    "description": "Structure de données pour les préférences et paramètres utilisateur dans Paris Explorer",
    "version": "2.0.0",
    "lastUpdated": "2025-01-05"
  },
  "template": {
    "userId": "nom-utilisateur",
    "appearance": {
      "theme": "paris-classic",
      "darkMode": false,
      "autoTheme": true,
      "customColors": {
        "primary": "#D4AF37",
        "secondary": "#1e3a8a",
        "accent": "#059669"
      },
      "fontSize": "medium",
      "animations": true,
      "reducedMotion": false,
      "highContrast": false,
      "colorBlindFriendly": false
    },
    "language": {
      "interface": "fr-FR",
      "content": "fr-FR",
      "dateFormat": "DD/MM/YYYY",
      "timeFormat": "24h",
      "currency": "EUR",
      "numberFormat": "european"
    },
    "navigation": {
      "defaultView": "list",
      "showCompletedByDefault": false,
      "autoExpandCategories": false,
      "compactMode": false,
      "showMinimap": true,
      "itemsPerPage": 20,
      "sortBy": "name",
      "sortOrder": "asc",
      "groupBy": "category"
    },
    "map": {
      "provider": "openstreetmap",
      "style": "classic",
      "defaultZoom": 11,
      "centerLat": 48.8566,
      "centerLng": 2.3522,
      "showTraffic": false,
      "showPublicTransport": true,
      "showBikeRoutes": true,
      "markerSize": "medium",
      "clusterMarkers": true,
      "fullscreenByDefault": false,
      "geolocateOnLoad": false
    },
    "notifications": {
      "enabled": true,
      "browser": true,
      "email": false,
      "push": false,
      "sound": true,
      "vibration": true,
      "types": {
        "achievement": true,
        "reminder": true,
        "social": false,
        "marketing": false,
        "updates": true
      },
      "quiet": {
        "enabled": false,
        "startTime": "22:00",
        "endTime": "08:00"
      },
      "frequency": {
        "daily": false,
        "weekly": true,
        "monthly": false
      }
    },
    "privacy": {
      "profileVisibility": "private",
      "showActivity": false,
      "showStats": false,
      "allowDataCollection": true,
      "shareAnonymousUsage": true,
      "allowCookies": true,
      "autoLocationSharing": false,
      "publicFavorites": false,
      "publicNotes": false
    },
    "accessibility": {
      "screenReader": false,
      "keyboardNavigation": true,
      "focusIndicators": true,
      "skipLinks": true,
      "altTextImages": true,
      "captionedVideos": true,
      "largeClickTargets": false,
      "dyslexiaFont": false
    },
    "data": {
      "autoSave": true,
      "saveInterval": 30,
      "autoBackup": true,
      "backupFrequency": "weekly",
      "syncEnabled": false,
      "syncProvider": null,
      "offlineMode": true,
      "cacheSize": "100MB",
      "compressionEnabled": true
    },
    "exploration": {
      "defaultRadius": 5000,
      "preferredTransport": ["walking", "metro"],
      "explorationStyle": "cultural",
      "difficulty": "moderate",
      "groupSize": "small",
      "budget": "medium",
      "timeAvailable": 120,
      "interests": [
        "monuments",
        "restaurants", 
        "culture",
        "jardins-secrets"
      ],
      "avoidCrowds": true,
      "weatherDependent": true,
      "accessibilityNeeds": []
    },
    "recommendations": {
      "enabled": true,
      "basedOnVisited": true,
      "basedOnFavorites": true,
      "basedOnRatings": true,
      "considerWeather": true,
      "considerTime": true,
      "considerLocation": false,
      "diversityFactor": 0.7,
      "noveltyWeight": 0.3,
      "popularityWeight": 0.4
    },
    "social": {
      "shareProgress": false,
      "allowFriends": false,
      "showOnLeaderboard": false,
      "publicProfile": false,
      "allowMessages": false,
      "shareRecommendations": true,
      "anonymousSharing": true
    },
    "advanced": {
      "developerMode": false,
      "debugMode": false,
      "betaFeatures": false,
      "experimentalUI": false,
      "performanceMode": false,
      "dataExportFormat": "json",
      "apiAccess": false,
      "webhookUrl": null
    }
  },
  "themes": {
    "paris-classic": {
      "name": "Paris Classique",
      "description": "Or et bleu royal, l'élégance parisienne",
      "colors": {
        "primary": "#D4AF37",
        "secondary": "#1e3a8a",
        "background": "#fefefe",
        "surface": "#faf8f5"
      }
    },
    "paris-dark": {
      "name": "Paris Nuit",
      "description": "Mode sombre élégant",
      "colors": {
        "primary": "#fbbf24",
        "secondary": "#60a5fa",
        "background": "#1f2937",
        "surface": "#374151"
      }
    },
    "versailles": {
      "name": "Versailles",
      "description": "Or et blanc royal",
      "colors": {
        "primary": "#FFD700",
        "secondary": "#000080",
        "background": "#FFFEF7",
        "surface": "#FFF8DC"
      }
    },
    "montmartre": {
      "name": "Montmartre",
      "description": "Rouge et noir bohème",
      "colors": {
        "primary": "#DC143C",
        "secondary": "#2F2F2F",
        "background": "#faf8f5",
        "surface": "#f5f3f0"
      }
    }
  },
  "presets": {
    "tourist": {
      "name": "Touriste",
      "description": "Paramètres optimisés pour les visiteurs",
      "settings": {
        "navigation": {
          "defaultView": "map",
          "showCompletedByDefault": false,
          "autoExpandCategories": true
        },
        "exploration": {
          "explorationStyle": "touristique",
          "interests": ["monuments", "culture", "restaurants"],
          "budget": "medium-high"
        },
        "map": {
          "showPublicTransport": true,
          "geolocateOnLoad": true
        }
      }
    },
    "local": {
      "name": "Parisien",
      "description": "Pour les habitants qui redécouvrent leur ville",
      "settings": {
        "navigation": {
          "defaultView": "list",
          "showCompletedByDefault": true,
          "compactMode": true
        },
        "exploration": {
          "explorationStyle": "local",
          "interests": ["jardins-secrets", "bars", "restaurants"],
          "avoidCrowds": true
        }
      }
    },
    "family": {
      "name": "Famille",
      "description": "Paramètres pour les sorties en famille",
      "settings": {
        "exploration": {
          "interests": ["parcs", "musees", "divertissements"],
          "groupSize": "large",
          "accessibilityNeeds": ["poussette", "enfants"]
        },
        "notifications": {
          "types": {
            "reminder": true,
            "achievement": true
          }
        }
      }
    },
    "foodie": {
      "name": "Gourmet",
      "description": "Pour les passionnés de gastronomie",
      "settings": {
        "exploration": {
          "interests": ["restaurants", "marches", "gastronomie"],
          "budget": "high"
        },
        "recommendations": {
          "considerTime": true,
          "basedOnRatings": true
        }
      }
    }
  },
  "examples": {
    "nouveauUtilisateur": {
      "userId": "marie-debutante",
      "appearance": {
        "theme": "paris-classic",
        "darkMode": false,
        "animations": true
      },
      "language": {
        "interface": "fr-FR",
        "dateFormat": "DD/MM/YYYY"
      },
      "navigation": {
        "defaultView": "list",
        "showCompletedByDefault": false
      },
      "notifications": {
        "enabled": true,
        "types": {
          "achievement": true,
          "reminder": true
        }
      }
    },
    "utilisateurAvance": {
      "userId": "pierre-expert",
      "appearance": {
        "theme": "custom",
        "customColors": {
          "primary": "#8B4513",
          "secondary": "#CD853F"
        },
        "darkMode": true
      },
      "navigation": {
        "compactMode": true,
        "itemsPerPage": 50,
        "groupBy": "arrondissement"
      },
      "advanced": {
        "developerMode": true,
        "betaFeatures": true
      }
    }
  },
  "validation": {
    "appearance": {
      "theme": {
        "enum": ["paris-classic", "paris-dark", "versailles", "montmartre", "custom"]
      },
      "fontSize": {
        "enum": ["small", "medium", "large", "extra-large"]
      }
    },
    "language": {
      "interface": {
        "enum": ["fr-FR", "en-US", "es-ES", "de-DE", "it-IT"]
      }
    },
    "exploration": {
      "budget": {
        "enum": ["low", "medium", "medium-high", "high", "luxury"]
      },
      "explorationStyle": {
        "enum": ["touristique", "local", "cultural", "gastronomique", "alternatif"]
      }
    }
  },
  "migrations": [
    {
      "from": "1.0.0",
      "to": "2.0.0",
      "description": "Ajout paramètres accessibilité et recommandations",
      "script": "migrations/1.0.0_to_2.0.0.js"
    }
  ],
  "defaults": {
    "newUser": {
      "theme": "paris-classic",
      "language": "fr-FR",
      "notifications": true,
      "autoSave": true,
      "defaultView": "list"
    }
  },
  "operations": {
    "updateSettings": {
      "description": "Mettre à jour les paramètres",
      "parameters": ["category", "settings"],
      "returns": "updated settings"
    },
    "resetToDefaults": {
      "description": "Réinitialiser aux valeurs par défaut",
      "parameters": ["categories?"],
      "returns": "default settings"
    },
    "applyPreset": {
      "description": "Appliquer un preset de paramètres",
      "parameters": ["presetId"],
      "returns": "updated settings"
    },
    "exportSettings": {
      "description": "Exporter les paramètres",
      "parameters": ["format?"],
      "returns": "settings file"
    },
    "importSettings": {
      "description": "Importer des paramètres",
      "parameters": ["settingsData"],
      "returns": "boolean"
    }
  }
}
