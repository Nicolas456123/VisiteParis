  "shortcuts": [
    {
      "name": "Rechercher",
      "short_name": "Recherche",
      "description": "Rechercher un lieu parisien",
      "url": "/?action=search",
      "icons": [
        {
          "src": "/icons/search-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Carte",
      "short_name": "Carte", 
      "description": "Ouvrir la carte interactive",
      "url": "/?tab=map",
      "icons": [
        {
          "src": "/icons/map-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Mes Favoris",
      "short_name": "Favoris",
      "description": "Voir mes lieux favoris",
      "url": "/?tab=favorites", 
      "icons": [
        {
          "src": "/icons/heart-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Statistiques",
      "short_name": "Stats",
      "description": "Voir ma progression",
      "url": "/?tab=stats",
      "icons": [
        {
          "src": "/icons/stats-96x96.png", 
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+parisexplorer",
      "url": "/handle-link?url=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "permissions": [
    "geolocation",
    "notifications",
    "persistent-storage"
  ],
  
  "prefer_related_applications": false,
  "related_applications": [],
  
  "iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9"
