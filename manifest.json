    },
    {
      "src": "assets/images/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "assets/images/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Paris Explorer - Vue Desktop"
    },
    {
      "src": "assets/images/screenshot-mobile.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Paris Explorer - Vue Mobile"
    }
  ],
  "shortcuts": [
    {
      "name": "Carte Interactive",
      "short_name": "Carte",
      "description": "Ouvrir la carte interactive de Paris",
      "url": "/?tab=map",
      "icons": [
        {
          "src": "assets/images/icon-map-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mes Favoris",
      "short_name": "Favoris",
      "description": "Voir mes lieux favoris",
      "url": "/?tab=favorites",
      "icons": [
        {
          "src": "assets/images/icon-favorites-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Statistiques",
      "short_name": "Stats",
      "description": "Voir mes statistiques de progression",
      "url": "/?tab=stats",
      "icons": [
        {
          "src": "assets/images/icon-stats-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://parisexplorer.fr/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+parisexplorer",
      "url": "/share?data=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "data",
          "accept": ["application/json", "text/csv"]
        }
      ]
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
